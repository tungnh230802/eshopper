@model ASM.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h1>Edit</h1>
    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Edit" class="row" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImage" />
                <div class="form-group col-lg-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Available" class="control-label"></label>
                    <input asp-for="Available" class="form-control" />
                    <span asp-validation-for="Available" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Condition" class="control-label"></label>
                    <input asp-for="Condition" class="form-control" />
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Image" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="Image" class="custom-file-input" />
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <img src="~/Uploads/@Model.ExistingImage" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
                </div>

                @*<div class="form-group">
                    <input type="submit" value="Save" class="button button-banner" />
                    </div>*@
                <div style="margin-top:10px;" class="form-group col-lg-12">
                    <a asp-action="Index" class="btn">Back to List</a>
                    <button type="submit" class="btn btn-submit">Save</button>
                </div>
            </form>
        </div>
    </div>

    @*<div>
        <a asp-action="Index">Back to List</a>
        </div>*@
</div>

@section Scripts {
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
